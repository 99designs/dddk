{
  "compilerOptions": {
    "lib": ["es2017"],
    "types": ["node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "pretty": true,
    "downlevelIteration": true,
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist"
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
